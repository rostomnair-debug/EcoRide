{% extends 'layout/legacy.html.twig' %}
{% block legacy_title %}EcoRide - Connexion{% endblock %}

{% block legacy_body %}
<section class="container my-5">
    <div class="page-hero mb-4">
        <h1 class="h3 fw-bold mb-1">Connexion à EcoRide</h1>
        <p class="mb-0">Accédez à vos trajets et réservations en toute sécurité.</p>
    </div>
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="surface-card p-4 p-md-5">
                <form action="{{ path('legacy_sign_in') }}" method="post" id="loginForm">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <fieldset>
                        <legend class="visually-hidden">Identifiez-vous</legend>
                        {% if error %}
                            <div class="alert alert-danger">Connexion impossible. Vérifiez vos informations.</div>
                        {% endif %}
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Adresse mail</label>
                            <input type="email" class="form-control" id="loginEmail" name="email" placeholder="adresse@mail.com" value="{{ last_username|default('') }}" required>
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="loginPassword" name="password" required>
                        </div>
                        <div class="text-end mb-3">
                            <a href="{{ path('legacy_reset_password') }}" class="small text-success">Mot de passe oublié ?</a>
                        </div>
                    </fieldset>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" type="submit">Se connecter</button>
                        <a class="btn btn-outline-success" href="/login">Créer un compte</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
