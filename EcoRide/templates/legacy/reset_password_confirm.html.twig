{% extends 'layout/legacy.html.twig' %}
{% block legacy_title %}EcoRide - Nouveau mot de passe{% endblock %}

{% block legacy_body %}
<section class="container my-5">
    <div class="page-hero mb-4">
        <h1 class="h3 fw-bold mb-1">Choisissez un nouveau mot de passe</h1>
        <p class="mb-0">Entrez et confirmez votre nouveau mot de passe.</p>
    </div>
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="surface-card p-4 p-md-5">
                <form method="post" action="{{ path('legacy_reset_password_confirm', { token: token }) }}">
                    <div class="mb-3">
                        <label class="form-label" for="newPass">Nouveau mot de passe</label>
                        <input type="password" class="form-control" id="newPass" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="newPassConfirm">Confirmation</label>
                        <input type="password" class="form-control" id="newPassConfirm" name="confirm_password" required>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-success" type="submit">Mettre Ã  jour</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
