{% extends 'layout/legacy.html.twig' %}
{% block legacy_title %}EcoRide - Ajouter un utilisateur{% endblock %}

{% block legacy_body %}
<section class="container my-5">
    <div class="page-hero mb-4">
        <h1 class="h4 fw-bold mb-1">Créer un utilisateur</h1>
        <p class="mb-0 text-muted">Compte de rôle utilisateur standard. Un mot de passe par défaut est appliqué si vous ne le renseignez pas.</p>
    </div>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="surface-card p-4">
        <form class="row g-3" method="post" action="{{ path('legacy_employee_add_user') }}">
            <div class="col-md-6">
                <label class="form-label" for="nom">Nom</label>
                <input type="text" id="nom" name="nom" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label class="form-label" for="prenom">Prénom</label>
                <input type="text" id="prenom" name="prenom" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label class="form-label" for="pseudo">Pseudo</label>
                <input type="text" id="pseudo" name="pseudo" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label class="form-label" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label class="form-label" for="password">Mot de passe initial</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Laisser vide pour User123$">
            </div>
            <div class="col-md-6">
                <label class="form-label" for="credit">Crédits de départ</label>
                <input type="number" id="credit" name="credit" class="form-control" min="0" value="20">
            </div>
            <div class="col-12 d-flex justify-content-end gap-2">
                <a class="btn btn-outline-secondary" href="{{ path('legacy_employee_space', {'tab': 'users'}) }}">Annuler</a>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('add_user') }}">
                <button class="btn btn-success" type="submit">Créer l'utilisateur</button>
            </div>
        </form>
    </div>
</section>
{% endblock %}
