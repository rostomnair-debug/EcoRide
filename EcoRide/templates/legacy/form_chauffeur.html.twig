{% extends 'layout/legacy.html.twig' %}
{% block legacy_title %}EcoRide - Profil Chauffeur{% endblock %}

{% block legacy_body %}
<section class="container my-5">
    <div class="page-hero mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
                <h1 class="h3 fw-bold mb-1">Complétez votre profil chauffeur</h1>
                <p class="mb-0">Présentez-vous à vos futurs passagers et sécurisez vos réservations.</p>
            </div>
            <a href="/login" class="btn btn-outline-light">Retour</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="surface-card p-4 p-md-5">
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <span>Ces informations resteront visibles uniquement pour vos passagers réservés.</span>
                </div>
                <form action="#" method="post" class="confirm-form" data-confirm="Confirmer l'enregistrement de votre profil chauffeur ?">
                    <fieldset class="mb-4">
                        <legend class="text-success fw-semibold mb-3">Informations personnelles</legend>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="fullname" class="form-label">Nom complet</label>
                                <input type="text" id="fullname" name="fullname" class="form-control" placeholder="Ex : Julie Dupont" required>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label">Téléphone</label>
                                <input type="tel" id="phone" name="phone" class="form-control" placeholder="06 12 34 56 78" pattern="^[0-9+\\s]{6,20}$" required>
                            </div>
                            <div class="col-md-6">
                                <label for="licenseNumber" class="form-label">Numéro de permis</label>
                                <input type="text" id="licenseNumber" name="licenseNumber" class="form-control" placeholder="AA-123-456-789" required>
                            </div>
                            <div class="col-md-3">
                                <label for="licenseDate" class="form-label">Obtention du permis</label>
                                <input type="date" id="licenseDate" name="licenseDate" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                                <label for="experience" class="form-label">Années d'expérience</label>
                                <input type="number" id="experience" name="experience" class="form-control" min="0" max="60" value="0" required>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="text-success fw-semibold mb-3">Votre véhicule</legend>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="brand" class="form-label">Marque</label>
                                <input type="text" id="brand" name="brand" class="form-control" placeholder="Renault" required>
                            </div>
                            <div class="col-md-4">
                                <label for="model" class="form-label">Modèle</label>
                                <input type="text" id="model" name="model" class="form-control" placeholder="Zoé" required>
                            </div>
                            <div class="col-md-4">
                                <label for="year" class="form-label">Année</label>
                                <input type="number" id="year" name="year" class="form-control" min="2000" max="2099" value="2022" required>
                            </div>
                            <div class="col-md-6">
                                <label for="plate" class="form-label">Immatriculation</label>
                                <input type="text" id="plate" name="plate" class="form-control" placeholder="AA-123-AA" required>
                            </div>
                            <div class="col-md-3">
                                <label for="energy" class="form-label">Énergie</label>
                                <select id="energy" name="energy" class="form-select" required>
                                    <option value="">Sélectionnez</option>
                                    <option value="electrique">Électrique</option>
                                    <option value="hybride">Hybride</option>
                                    <option value="essence">Essence</option>
                                    <option value="diesel">Diesel</option>
                                    <option value="gpl">GPL</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="seats" class="form-label">Places disponibles</label>
                                <input type="number" id="seats" name="seats" class="form-control" min="1" max="6" value="3" required>
                            </div>
                            <div class="col-12">
                                <label for="features" class="form-label">Options / équipements</label>
                                <textarea id="features" name="features" class="form-control" rows="2" placeholder="Climatisation, USB, siège enfant, musique au choix..."></textarea>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="text-success fw-semibold mb-3">Disponibilités & préférences</legend>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Jours privilégiés</label>
                                <div class="d-flex flex-wrap gap-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="weekday" id="weekday" name="days[]">
                                        <label class="form-check-label" for="weekday">Semaine</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="weekend" id="weekend" name="days[]">
                                        <label class="form-check-label" for="weekend">Week-end</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="morning" id="morning" name="days[]">
                                        <label class="form-check-label" for="morning">Matin</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="evening" id="evening" name="days[]">
                                        <label class="form-check-label" for="evening">Soir</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Conditions particulières</label>
                                <div class="d-flex flex-column gap-2">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="ecoRide" name="ecoRide" checked>
                                        <label class="form-check-label" for="ecoRide">Trajets éco-responsables</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="animals" name="animals">
                                        <label class="form-check-label" for="animals">Animaux acceptés</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="smoking" name="smoking">
                                        <label class="form-check-label" for="smoking">Zone fumeur</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Présentez-vous</label>
                                <textarea id="description" name="description" class="form-control" rows="4" placeholder="Quelques mots sur votre style de conduite, vos trajets habituels, vos passions..."></textarea>
                            </div>
                        </div>
                    </fieldset>

                    <div class="d-flex flex-column flex-md-row gap-3 justify-content-end">
                        <a href="/login" class="btn btn-outline-success">Annuler</a>
                        <button type="button" class="btn btn-success btn-lg trigger-confirm">Enregistrer mon profil chauffeur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% block legacy_scripts %}
    {{ parent() }}
    <div class="modal fade" id="confirmChauffeurModal" tabindex="-1" aria-labelledby="confirmChauffeurLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmChauffeurLabel">Confirmer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body" id="confirmChauffeurBody">
                    Confirmer cette action ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-success" id="confirmChauffeurSubmit">Confirmer</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        (function () {
            const modalEl = document.getElementById('confirmChauffeurModal');
            if (!modalEl) return;
            const bodyEl = document.getElementById('confirmChauffeurBody');
            const confirmBtn = document.getElementById('confirmChauffeurSubmit');
            let pendingForm = null;
            modalEl.addEventListener('hidden.bs.modal', () => { pendingForm = null; });

            document.querySelectorAll('.confirm-form').forEach(form => {
                const btn = form.querySelector('.trigger-confirm');
                if (!btn) return;
                btn.addEventListener('click', () => {
                    pendingForm = form;
                    bodyEl.textContent = form.dataset.confirm || 'Confirmer cette action ?';
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                });
            });

            confirmBtn.addEventListener('click', () => {
                if (pendingForm) {
                    pendingForm.submit();
                }
            });
        })();
    </script>
{% endblock %}
{% endblock %}
